
<h3>Edit Profile</h3>
<%= form_for @user, url: user_path(current_user), html: { multipart: true }  do |f| %>
  <!-- <p><%= f.label :avatar %></p>
  <p><%= f.file_field :avatar %></p> -->

  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :email %>
  <%= f.text_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, placeholder: "Re-type your password to save changes" %></p>
  <%= f.submit class: "waves-effect waves-light btn" %>
<% end %>

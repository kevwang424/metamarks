<% if @user.errors.full_messages %>
  <% @user.errors.full_messages.each do |msg| %>
      <%= content_tag :div, msg %>
  <% end %>
<% end %>

<%= form_for @user do |f|  %>

<p><%= f.label :name %>
<%= f.text_field :name %></p>

<p><%= f.label :email %>
<%= f.text_field :email %></p>

<p><%= f.label :password %>
<%= f.password_field :password %></p>

<p><%= f.label "Reconfirm" %>
<%= f.password_field :password_confirmation %></p>

<%= f.submit class: "waves-effect waves-light btn" %>
<% end %>

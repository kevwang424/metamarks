<% if @user.errors.full_messages %>
  <% @user.errors.full_messages.each do |msg| %>
      <%= content_tag :div, msg %>
  <% end %>
<% end %>

<%= form_for @user do |f|  %>

<p><%= f.label :email %>
<%= f.text_field :email %></p>

<p><%= f.label :password %>
<%= f.password_field :password %></p>
<%= f.submit %>
<% end %>

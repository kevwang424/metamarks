
<h3>Login Form</h3>
<%= form_tag sessions_path do %>
<p><%= label_tag :email %>
<%= email_field_tag :email %></p>

<p><%= label_tag :password %>
<%= password_field_tag :password %></p>

<%= submit_tag "Login", class: "waves-effect waves-light btn" %>

<% end %>

<br />

<%= button_to "Signup", signup_path, method: 'get', class: "waves-effect waves-light btn" %>

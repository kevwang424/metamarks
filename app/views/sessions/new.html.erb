<% @user.errors.full_messages.each do |msg| %>
    <%= content_tag :div, msg %>
<% end %>

<h1>Login Form</h1>
<%= form_tag sessions_path do %>
<p><%= label_tag :email %>
<%= email_field_tag :email %></p>

<p><%= label_tag :password %>
<%= password_field_tag :password %></p>

<%= submit_tag "Login" %>

<% end %>

<%= button_to "Signup", signup_path, method: 'get' %>
